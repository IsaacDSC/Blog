<h2>Listas de categorias:</h2>
<hr>
<a href="/admin/categoria/add"><button class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{this.nome}}</h4>
        <small>{{this.slug}}</small>
        <br>
        <small>Data de categorias:{{this.date}}</small>
        <ul>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-3">Editar</button></a>
            <a href=""><button class="btn btn-danger mt-3">Apagar</button></a>
        </ul>

    </div>
</div>
{{/each}}